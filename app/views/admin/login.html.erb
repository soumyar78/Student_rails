<%= flash[:notice] %>
<h1>Admin Login</h1>
<%= form_with url: "/admin/login", method: :post do |form| %>
    <div class="field">
        <%= form.label :user_id  %>
        <%= form.text_field :user_id %>
    </div>
    <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

  <div class="actions">
    <%= form.submit "Admin Login" %>
  </div>
<% end %>