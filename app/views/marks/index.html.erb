<p id="notice"><%= notice %></p>

<h1>Marks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
    <th>Student</th>
      <th>M1</th>
      <th>M2</th>
      <th>M3</th>
      <th>M4</th>
      <th>M5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
      <td><%= mark.student.name%></td>
        <td><%= mark.m1 %></td>
        <td><%= mark.m2 %></td>
        <td><%= mark.m3 %></td>
        <td><%= mark.m4 %></td>
        <td><%= mark.m5 %></td>
        
        
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', mark %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_mark_path(mark) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Mark', new_mark_path %></button>
